<?xml version="1.0"?>
<robot name="hallway_env">

  <link name="world"/>

  <!-- LEFT WALL -->
  <link name="left_wall">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="10 0.1 2"/>
      </geometry>
      <material name="gray80">
        <color rgba="0.7 0.7 0.7 0.8"/>
      </material>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="10 0.1 2"/>
      </geometry>
    </collision>
  </link>

  <joint name="left_wall_joint" type="fixed">
    <parent link="world"/>
    <child link="left_wall"/>
    <origin xyz="0 1 1" rpy="0 0 0"/>
  </joint>

  <!-- RIGHT WALL -->
