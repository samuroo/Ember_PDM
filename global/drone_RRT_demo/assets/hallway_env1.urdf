<?xml version="1.0"?>
<robot name="hallway_env">

  <!-- Just a reference link -->
  <link name="world"/>

  <!-- LEFT WALL (y = +1) -->
  <link name="left_wall">
    <visual>
      <!-- box: length 10 (x), thickness 0.1 (y), height 2 (z) -->
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="10 0.1 2"/>
      </geometry>
      <material name="gray">
        <color rgba="0.7 0.7 0.7 1"/>
      </material>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="10 0.1 2"/>
      </geometry>
    </collision>
  </link>

  <joint name="left_wall_joint" type="fixed">
    <parent link="world"/>
    <!-- center of the wall at (x=0, y=+1, z=1) -->
    <child link="left_wall"/>
    <origin xyz="0 1 1" rpy="0 0 0"/>
  </joint>

  <!-- RIGHT WALL (y = -1) -->
  <link name="right_wall">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="10 0.1 2"/>
      </geometry>
      <material name="gray">
        <color rgba="0.7 0.7 0.7 1"/>
      </material>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="10 0.1 2"/>
      </geometry>
    </collision>
  </link>

  <joint name="right_wall_joint" type="fixed">
    <parent link="world"/>
    <!-- center of the wall at (x=0, y=-1, z=1) -->
    <child link="right_wall"/>
    <origin xyz="0 -1 1" rpy="0 0 0"/>
  </joint>

  <!-- BOX 1 (obstacle in the hallway) -->
  <link name="box1">
    <visual>
      <!-- small box in the middle of the corridor -->
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="0.5 0.6 1.5"/>
      </geometry>
      <material name="red">
        <color rgba="0.9 0.2 0.2 1"/>
      </material>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="0.5 0.8 1.5"/>
      </geometry>
    </collision>
  </link>

  <joint name="box1_joint" type="fixed">
    <parent link="world"/>
    <!-- center at (x=-2, y=0, z=0.75) -->
    <child link="box1"/>
    <origin xyz="-2 0 0.75" rpy="0 0 0"/>
  </joint>

  <!-- BOX 2 -->
  <link name="box2">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="0.5 0.6 1.5"/>
      </geometry>
      <material name="blue">
        <color rgba="0.2 0.2 0.9 1"/>
      </material>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="0.5 0.8 1.5"/>
      </geometry>
    </collision>
  </link>

  <joint name="box2_joint" type="fixed">
    <parent link="world"/>
    <!-- center at (x=+2, y=0, z=0.75) -->
    <child link="box2"/>
    <origin xyz="2 0 0.75" rpy="0 0 0"/>
  </joint>

  <!-- FLOOR (top surface at z = 0) -->
  <link name="floor">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <!-- length x=10, width y=2.2 (a bit wider than walls), thickness z=0.1 -->
      <geometry>
        <box size="10 2.2 0.1"/>
      </geometry>
      <material name="orange">
        <color rgba="1.0 0.55 0.0 1"/>
      </material>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="10 2.2 0.1"/>
      </geometry>
    </collision>
  </link>

  <joint name="floor_joint" type="fixed">
    <parent link="world"/>
    <child link="floor"/>
    <!-- center at z = -0.05 so the TOP is exactly at z = 0 -->
    <origin xyz="0 0 -0.05" rpy="0 0 0"/>
  </joint>

  <!-- CEILING (bottom surface at z = 2.0) -->
  <link name="ceiling">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <!-- same footprint as floor -->
      <geometry>
        <box size="10 2.2 0.1"/>
      </geometry>
      <material name="orange">
        <color rgba="1.0 0.55 0.0 1"/>
      </material>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="10 2.2 0.1"/>
      </geometry>
    </collision>
  </link>

  <joint name="ceiling_joint" type="fixed">
    <parent link="world"/>
    <child link="ceiling"/>
    <!-- center at z = 2.05 so the BOTTOM is exactly at z = 2.0 -->
    <origin xyz="0 0 2.05" rpy="0 0 0"/>
  </joint>

</robot>